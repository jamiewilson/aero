{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@aerobuilt/core/editor": ["../core/dist/entry-editor"]
		},
		"lib": ["ES2020"],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": false,
		"sourceMap": true,
		"types": ["node", "vscode"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
