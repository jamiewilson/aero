{
	"scopeName": "aero.attributes.injection",
	"injectionSelector": "L:meta.tag -comment",
	"patterns": [
		{ "include": "#aero-script-type-attributes" },
		{ "include": "#aero-control-flow-attributes" },
		{ "include": "#aero-props-attribute" }
	],
	"repository": {
		"aero-script-type-attributes": {
			"comment": "Highlight on:build and on:client as special script type attributes",
			"match": "\\b(on:(build|client))\\b",
			"captures": {
				"1": { "name": "entity.other.attribute-name.aero.script-type" }
			}
		},
		"aero-control-flow-attributes": {
			"comment": "Highlight data-each/each, data-if/if, data-else-if/else-if, data-else/else as control flow keywords",
			"patterns": [
				{
					"match": "\\b(data-each|(?<=[\\s\"'])each)(?=[\\s=/>])",
					"captures": {
						"1": { "name": "keyword.control.loop.aero" }
					}
				},
				{
					"match": "\\b(data-if|(?<=[\\s\"'])if)(?=[\\s=/>])",
					"captures": {
						"1": { "name": "keyword.control.conditional.aero" }
					}
				},
				{
					"match": "\\b(data-else-if|(?<=[\\s\"'])else-if)(?=[\\s=/>])",
					"captures": {
						"1": { "name": "keyword.control.conditional.aero" }
					}
				},
				{
					"match": "\\b(data-else|(?<=[\\s\"'])else)(?=[\\s/>])",
					"captures": {
						"1": { "name": "keyword.control.conditional.aero" }
					}
				}
			]
		},
		"aero-props-attribute": {
			"comment": "Highlight data-props as a special props attribute",
			"match": "\\b(data-props)\\b",
			"captures": {
				"1": { "name": "entity.other.attribute-name.aero.props" }
			}
		}
	}
}
