{
	"name": "@aerobuilt/content",
	"version": "0.2.6",
	"type": "module",
	"license": "MIT",
	"author": "Jamie Wilson",
	"repository": {
		"type": "git",
		"url": "https://github.com/aerobuilt/aero.git",
		"directory": "packages/content"
	},
	"homepage": "https://github.com/aerobuilt/aero",
	"private": false,
	"types": "./dist/types.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts src/vite.ts src/markdown.ts src/render.ts src/processor.ts --format esm --dts --clean --out-dir dist",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"prepack": "cp ../../LICENSE ."
	},
	"exports": {
		".": {
			"types": "./dist/types.d.ts",
			"default": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"default": "./dist/vite.js"
		},
		"./markdown": {
			"types": "./dist/markdown.d.ts",
			"default": "./dist/markdown.js"
		},
		"./render": {
			"types": "./dist/render.d.ts",
			"default": "./dist/render.js"
		},
		"./processor": {
			"types": "./dist/processor.d.ts",
			"default": "./dist/processor.js"
		},
		"./types": "./dist/types.d.ts"
	},
	"dependencies": {
		"@aerobuilt/highlight": "workspace:*",
		"fast-glob": "^3.3.3",
		"gray-matter": "^4.0.3",
		"remark": "^15.0.1",
		"remark-html": "^16.0.1",
		"remark-rehype": "^11.0.0",
		"rehype-stringify": "^10.0.0",
		"@shikijs/rehype": "^3.0.0",
		"unified": "^11.0.0"
	},
	"peerDependencies": {
		"vite": "^8.0.0-0",
		"zod": "^4.0.0"
	},
	"peerDependenciesMeta": {
		"vite": {
			"optional": true
		},
		"zod": {
			"optional": true
		}
	},
	"devDependencies": {
		"@shikijs/transformers": "^3.0.0",
		"@types/node": "^25.3.0",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vite": "8.0.0-beta.15",
		"vitest": "^4.0.18",
		"zod": "^4.3.6"
	}
}
