{
	"name": "@aero-ssg/content",
	"version": "0.1.0",
	"type": "module",
	"private": false,
	"types": "./dist/types.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts src/vite.ts src/markdown.ts src/render.ts --format esm --dts --clean --out-dir dist",
		"test": "vitest run"
	},
	"exports": {
		".": {
			"types": "./dist/types.d.ts",
			"default": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"default": "./dist/vite.js"
		},
		"./markdown": {
			"types": "./dist/markdown.d.ts",
			"default": "./dist/markdown.js"
		},
		"./render": {
			"types": "./dist/render.d.ts",
			"default": "./dist/render.js"
		},
		"./types": "./dist/types.d.ts"
	},
	"dependencies": {
		"gray-matter": "^4.0.3",
		"fast-glob": "^3.3.3",
		"remark": "^15.0.1",
		"remark-html": "^16.0.1"
	},
	"peerDependencies": {
		"vite": "^7.0.0",
		"zod": "^4.0.0"
	},
	"peerDependenciesMeta": {
		"zod": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/node": "^25.2.3",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^4.0.18",
		"vite": "^7.3.1",
		"zod": "^4.3.6"
	}
}
