{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "."
	},
	"include": ["*.ts", "__tests__/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
