{
	"name": "@aero-ssg/core",
	"version": "0.1.0",
	"type": "module",
	"private": false,
	"types": "./dist/types.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts src/vite/index.ts src/runtime/index.ts src/runtime/instance.ts --format esm --dts --clean --out-dir dist --external @content/site",
		"test": "CHOKIDAR_USEPOLLING=1 vitest run src/compiler/ src/vite/"
	},
	"exports": {
		".": {
			"types": "./dist/types.d.ts",
			"default": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite/index.d.ts",
			"default": "./dist/vite/index.js"
		},
		"./runtime": {
			"types": "./dist/runtime/index.d.ts",
			"default": "./dist/runtime/index.js"
		},
		"./runtime/instance": {
			"types": "./dist/runtime/instance.d.ts",
			"default": "./dist/runtime/instance.js"
		},
		"./types": "./dist/types.d.ts"
	},
	"dependencies": {
		"get-tsconfig": "^4.13.6",
		"linkedom": "^0.18.12",
		"nitro": "latest",
		"sharp": "^0.34.5",
		"svgo": "^4.0.0",
		"vite-plugin-image-optimizer": "^2.0.3"
	},
	"peerDependencies": {
		"vite": "^7.0.0"
	},
	"devDependencies": {
		"@types/node": "^25.2.3",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^4.0.18"
	}
}
