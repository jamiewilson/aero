{
	"extends": ["nitro/tsconfig"],
	"compilerOptions": {
		"types": ["vite/client"],
		"paths": {
			"~/*": ["./*"],
			"@src/*": ["./src/*"],
			"@server/*": ["./server/*"],
			"@content/*": ["./src/content/*"],
			"@pages/*": ["./src/pages/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@components/*": ["./src/components/*"],
			"@styles/*": ["./src/assets/styles/*"],
			"@scripts/*": ["./src/assets/scripts/*"],
			"@images/*": ["./src/assets/images/*"],
			"content-collections": ["./.content-collections/generated"]
		}
	}
}
