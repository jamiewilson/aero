{
	"name": "aero",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@10.28.0",
	"scripts": {
		"build:core": "pnpm --dir packages/core build",
		"build:content": "pnpm --dir packages/content build",
		"build:start": "pnpm --dir packages/start build",
		"build:vscode": "pnpm --dir packages/vscode build",
		"build:all": "pnpm build:core && pnpm build:content && pnpm build:start",
		"test": "vitest run",
		"typecheck": "pnpm -r typecheck",
		"clean:all": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist && rm -rf packages/*/.output"
	},
	"devDependencies": {
		"vitest": "^4.0.18"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@aero-ssg/core",
			"@aero-ssg/content"
		],
		"overrides": {
			"vite": "8.0.0-beta.15"
		}
	}
}
