{
	"extends": ["nitro/tsconfig"],
	"compilerOptions": {
		"types": ["vite/client"],
		"paths": {
			"~/*": ["./*"],
			"@src/*": ["./src/*"],
			"@app/*": ["./app/*"],
			"@styles/*": ["./app/assets/styles/*"],
			"@scripts/*": ["./app/assets/scripts/*"],
			"@images/*": ["./app/assets/images/*"],
			"@components/*": ["./app/components/*"],
			"@layouts/*": ["./app/layouts/*"],
			"@pages/*": ["./app/pages/*"],
			"@utils/*": ["./src/utils/*"]
		}
	}
}
